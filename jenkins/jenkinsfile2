pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: '*/main', url: 'https://github.com/MdurmazGithub/jenkins-practices.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                echo 'Deploying to Production'
                // Production deployment steps
            }
        }
        stage('Deploy to Test') {
            when {
                branch 'develop'
            }
            steps {
                echo 'Deploying to Test Environment'
                // Test environment deployment steps
            }
        }
        stage('Feature Branches') {
            when {
                not {
                    branch 'main'
                }
            }
            steps {
                echo 'Building and testing feature branch'
                // Feature branch steps
            }
        }
    }
    post {
        success {
            echo 'Pipeline finished successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
