pipeline {
    agent any
    parameters {
        choice(name: 'ENV', choices: ['dev', 'test', 'stage', 'prod'], description: 'Choose an environment to deploy to')
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/MdurmazGithub/jenkins-practices.git'
            }
        }
        stage('Build') {
            steps {
               echo 'mvn clean package'
            }
        }
        stage('Deploy to Dev') {
            when {
                expression { params.ENV == 'dev' }
            }
            steps {
                echo 'Deploying to Development Environment'
                // Deployment steps for dev
            }
        }
        stage('Deploy to Test') {
            when {
                expression { params.ENV == 'test' }
            }
            steps {
                echo 'Deploying to Test Environment'
                // Deployment steps for test
            }
        }
        stage('Deploy to Stage') {
            when {
                expression { params.ENV == 'stage' }
            }
            steps {
                echo 'Deploying to Stage Environment'
                // Deployment steps for stage
            }
        }
        stage('Deploy to Prod') {
            when {
                expression { params.ENV == 'prod' }
            }
            steps {
                echo 'Deploying to Production Environment'
                // Deployment steps for prod
            }
        }
    }
    post {
        always {
            echo 'Cleaning up...'
            // Clean-up actions
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
