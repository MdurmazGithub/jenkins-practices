pipeline {
    agent any

    parameters {
        choice(name: 'ENV', choices: ['dev', 'test', 'stage', 'prod'], description: 'Choose an environment to deploy to')
    }

    stages {
        stage('Initialize') {
            steps {
                echo 'This is an empty repository.'
            }
        }
        stage('Checkout') {
            steps {
                echo 'Checking out the repository...'
                git 'https://github.com/MdurmazGithub/jenkins-practices.git' // Replace with your empty repo URL
            }
        }
        stage('Build') {
            steps {
                echo 'No code to build.'
            }
        }
        stage('Test') {
            steps {
                echo 'No tests to run.'
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying to ${params.ENV} environment."
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}
